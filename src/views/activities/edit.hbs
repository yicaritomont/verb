<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/activities/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name" value="{{link.name}}" autofocus required>
                </div>
                <div class="form-group">
                    <input type="text" name="salary" class="form-control" placeholder="Salary" value="{{link.salary}} required">
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>